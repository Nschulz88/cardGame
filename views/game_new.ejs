 <!DOCTYPE <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Goofspiel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles/layout.css" type="text/css"/>
    <!-- <script src="app.js"></script> -->
</head>
<body>
    <div class=cardContainer>
        <div class=player1Cards>
        <p>Player 1:</p>
            <% game.hand2.forEach(function(card) { %>
                <span type="sumbit" name="card" value="<%= card %>">
                    <img class="cardsDisplay" src="/cards/<%= card %>.png" />
                </span>
            <% }) %>
        </div>

        <div class=pileCards>
                    <% game.pile.forEach(function(pileCard) { %>
                    <span>
                        <input type="image" src="/cards/<%= pileCard %>.png" name="card" class="cardsDisplay" value="<%= pileCard %>">
                    </span>
                <% }) %>
            </div>
 
        <div class=player2Cards>
            <form method="POST" action="/game/<%= gameId %>/play">
            <p>Player 2:</p>
                <% game.hand1.forEach(function(card) { %>
                <span>
                    <input type="image" src="/cards/<%= card %>.png" name="card" class="cardsDisplay" value="<%= card %>">
                </span>
            <% }) %>
            </form>
        </div>
    </div>

   <!-- <pre><%= JSON.stringify(game, null, 2) %></pre> -->


</body>
</html>
